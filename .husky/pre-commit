#!/bin/sh

# Run lint-staged for linting and formatting staged files
echo "ğŸ” Running lint and format on staged files..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ Lint or format check failed. Please fix errors."
  exit 1
fi

# Run full validation (lint, format, type-check)
echo "ğŸ”§ Running full validation..."
yarn validate
if [ $? -ne 0 ]; then
  echo "âŒ Validation failed. Please fix errors."
  exit 1
fi

# Run all tests
echo "ğŸ§ª Running all tests..."
yarn test:all
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix failing tests."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
