#!/bin/sh

# Run lint-staged for linting and formatting staged files
echo "🔍 Running lint and format on staged files..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo "❌ Lint or format check failed. Please fix errors."
  exit 1
fi

# Run full validation (lint, format, type-check)
echo "🔧 Running full validation..."
yarn validate
if [ $? -ne 0 ]; then
  echo "❌ Validation failed. Please fix errors."
  exit 1
fi

# Run all tests
echo "🧪 Running all tests..."
yarn test:all
if [ $? -ne 0 ]; then
  echo "❌ Tests failed. Please fix failing tests."
  exit 1
fi

echo "✅ All pre-commit checks passed!"
